  <!-- Header -->
  <header class="masthead d-flex">
    <div class="container text-center my-auto"> 
      <h1 class="mb-1">NGO Enlist</h1>
      <h3 class="mb-5">
        <em> Explore all the Volunteer Options in NYC and pour your hearts out</em>
      </h3>
      <a class="btn btn-primary btn-xl js-scroll-trigger" href="#about">How we help</a>
    </div>
    <div class="overlay"></div>
  </header>

  <!-- About -->
  <section class="content-section bg-light" id="about">
    <div class="container text-center">
      <div class="row">
        <div class="col-lg-10 mx-auto">
          <h2> One step forward to your volunteering aspirations </h2>
          <p class="lead mb-5">Select the category of your choice and start making a difference</p>
          <a class="btn btn-dark btn-xl js-scroll-trigger" href="#services">Categories</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Services -->
  <section class="content-section bg-primary text-white text-center" id="services">
    <div class="container">
      <div class="content-section-heading">
        <h3 class="text-secondary mb-0">Select A</h3>
        <h2 class="mb-5">Category</h2>
      </div>
      <div class="row" id="category-row">
        <div class="col-lg-4 col-md-4 mb-5 mb-lg-0"><a href="/education">
          <span class="service-icon rounded-circle mx-auto mb-3">
            <i class="fas fa-book-open"></i>
          </span></a>
          <h4>
            <strong>Education</strong>
          </h4>
          <p class="text-faded mb-0">Help spread the power of knowledge to others!</p>
        </div>
        <div class="col-lg-4 col-md-4 mb-5 mb-lg-0"><a href="/emergency">
          <span class="service-icon rounded-circle mx-auto mb-3">
            <i class="fas fa-first-aid"></i>
          </span></a>
          <h4>
            <strong>Emergency Preparedness</strong>
          </h4>
          <p class="text-faded mb-0">Help people in emergency and train them to help others!</p>
        </div>
        <div class="col-lg-4 col-md-4 mb-5 mb-lg-0"><a href="/environment">
            <span class="service-icon rounded-circle mx-auto mb-3">
            <i class="fab fa-envira"></i>
          </span></a>
          <h4>
            <strong>Environment</strong>
          </h4>
          <p class="text-faded mb-0">Join the step to save mother Earth!</p>
        </div>
      </div>
      <div class="row" id="category-row">
        <div class="col-lg-4 col-md-4 mb-5 mb-lg-0"><a href="/health" >
          <span class="service-icon rounded-circle mx-auto mb-3">
            <i class="fas fa-hospital-symbol"></i>
          </span></a>
          <h4>
            <strong>Health</strong>
          </h4>
          <p class="text-faded mb-0">Fight for the better health of fellow people!</p>
        </div>
        <div class="col-lg-4 col-md-4 mb-5 mb-md-0"><a href="/neighbourhood">
          <span class="service-icon rounded-circle mx-auto mb-3">
            <i class="fas fa-hands-helping"></i>
          </span></a>
          <h4>
            <strong>Helping Neighbours in Need</strong>
          </h4>
          <p class="text-faded mb-0">Help people around you bring a change in lives!</p>
        </div>
        <div class="col-lg-4 col-md-4 "><a href="/community">
          <span class="service-icon rounded-circle mx-auto mb-3">
            <i class="fas fa-users"></i>
          </span></a>
          <h4>
            <strong>Strengthening Communities</strong>
          </h4>
          <p class="text-faded mb-0">Help bring people together for collective goods!</p>
        </div>
      </div>
      </div>
    </div>
  </section>

  <!-- Callout -->
  <section class="callout">
      <div class="page-wrapper">
        <div class="wrapper wrapper--w900">
            <div class="card card-6">
                <div class="card-heading">
                    <h2 class="title">Add a new event</h2>
                </div>
                <div class="card-body">
                    <form method="POST" action="/api/Events" enctype="multipart/form-data">
                        <div class="form-row">
                            <div class="name">NGO Name</div>
                            <div class="value">
                                <input class="input--style-6" type="text" name="org_title" placeholder="Name">
                            </div>
                        </div>
                        <div class="form-row">
                          <div class="name">Category</div>
                          <div class="value">
                            <select id="category" class="input--style-6" name="category_desc" >
                              <option value="" disabled selected>Select your option</option>
                              <li><option value="Education">Education</option>
                              <option value="Emergency Preparedness">Emergency Preparedness</option>
                              <option value="Environment">Environment</option>
                              <option value="Health">Health</option>
                              <option value="Helping Neighbours in Need">Helping Neighbours in Need</option>
                              <option value="Strengthening Communities">Strengthening Communities</option>
                            </select>
                          </div>
                      </div>
                        <div class="form-row">
                          <div class="name">No of Volunteers Needed</div>
                          <div class="value">
                              <input class="input--style-6" type="number" name="vol_requests" placeholder="Number">
                          </div>
                      </div>
                        <div class="form-row">
                            <div class="name">Job Title</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-6" type="text" name="title" placeholder="Enter a brief title">
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Job Describtion</div>
                            <div class="value">
                                <div class="input-group">
                                    <textarea class="textarea--style-6" name="summary" placeholder="Message sent to the employer"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                          <div class="name">Address</div>
                          <div class="value">
                              <div class="input-group">
                                  <input class="input--style-6" type="text" name="locality" placeholder="Address">
                              </div>
                          </div>
                      </div>
                      <div class="form-row">
                        <div class="name">Recurrence</div>
                        <div class="value">
                          <select id="category"  class="select--style-6" name="recurrence_type" >
                            <option  value="" disabled selected>Select your option</option>
                            <option value=onetime>One Time</option>
                            <option value="ongoing">Ongoing</option>
                          </select>
                        </div>
                    </div>
                  <div class="form-row">
                    <div class="name">Start Date</div>
                    <div class="value">
                        <div class="input-group">
                            <input class="td td--style-6" type="date" name="start_date_date" placeholder="Address">
                        </div>
                    </div>
                </div>
                <div class="form-row">
                  <div class="name">End Date</div>
                  <div class="value">
                      <div class="input-group">
                          <input class="td td--style-6" type="date" name="end_date_date" placeholder="Address">
                      </div>
                  </div>
              </div>
              <div class="form-row">
                <div class="name">Latitude</div>
                <div class="value">
                    <div class="input-group">
                        <input class="input--style-6" type="text" name="Latitude" placeholder="Lattitude">
                    </div>
                </div>
            </div>
            <div class="form-row">
              <div class="name">Longitude</div>
              <div class="value">
                  <div class="input-group">
                      <input class="input--style-6" type="text" name="Longitude" placeholder="Longitude">
                  </div>
              </div>
          </div>
          <div class="form-row">
                            <div class="name">Upload NGO Logo</div>
                            <div class="value">
                                <div class="input-group js-input-file">
                                    <input class="input-file" type="file" name="images" id="file">
                                    <label class="label--file" for="file">Choose Logo</label>
                                    <span class="input-file__info">No file chosen</span>
                                </div>
                                <div class="label--desc">Upload the NGO Logo. Max file size 1 MB</div>
                            </div>
                        </div>
                        <div class="card-footer">
                          <button class="btn btn--radius-2 btn--blue-2" type="submit" value="submit">Submit Request</button>
                      </div>
                    </form>
                </div>
            </div>
        </div>
      </div>
  </section>


